@model Projekt_atrakcje.Models.Country

@{
    ViewData["Title"] = "Edycja";
}

<div class="container">
    <h1 class="text-center">Edycja</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capital" class="control-label fw-bold"></label>
                    <input asp-for="Capital" class="form-control" />
                    <span asp-validation-for="Capital" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Area" class="control-label fw-bold"></label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Wróć do strony głównej</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
