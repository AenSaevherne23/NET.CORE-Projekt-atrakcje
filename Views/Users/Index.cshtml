@model IEnumerable<Projekt_atrakcje.Models.User>

@{
    ViewData["Title"] = "Użytkownicy";
}

<h1 class="text-center">Użytkownicy</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Dodaj nowego użytkownika</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Name_user)</th>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Password)</th>
                <th style="width: 200px;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Name_user)</td>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Password)</td>
                    <td style="width: 200px;" class="align-middle">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-info rounded-pill" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a class="btn btn-warning rounded-pill ml-2" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a class="btn btn-danger rounded-pill ml-2" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </div>
                    </td>
                </tr>
                @if (item.Cities.Any())
                {
                    <tr>
                        <td colspan="4">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nazwa miasta</th>
                                        <th>Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var city in item.Cities)
                                    {
                                        <tr>
                                            <td>@city.Name</td>
                                            <td>
                                                <a asp-action="Grade" asp-route-id="@item.Id" asp-route-cityid="@city.Id" class="btn btn-sm btn-primary">Oceny</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
