@model IEnumerable<Projekt_atrakcje.Models.City>

@{
    ViewData["Title"] = "Miasta";
}

<h1 class="text-center">Miasta</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Dodaj nowe miasto</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Name)</th>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Region)</th>
                <th style="width: 150px;">@Html.DisplayNameFor(model => model.Population)</th>
                <th style="width: 200px;">@Html.DisplayNameFor(model => model.Country)</th>
                <th style="width: 200px;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Region)</td>
                    <td style="width: 150px;" class="align-middle">@Html.DisplayFor(modelItem => item.Population)</td>
                    <td style="width: 200px;" class="align-middle">@Html.DisplayFor(modelItem => item.Country.Name)</td>
                    <td style="width: 200px;" class="align-middle">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-info rounded-pill" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a class="btn btn-warning rounded-pill ml-2" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a class="btn btn-danger rounded-pill ml-2" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
