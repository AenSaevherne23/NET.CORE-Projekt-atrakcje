@model Projekt_atrakcje.Models.Attraction

@{
    ViewData["Title"] = "Edycja";
}

<div class="container">
    <h1 class="text-center">Edycja</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                    <label asp-for="Name_attraction" class="control-label fw-bold"></label>
                <input asp-for="Name_attraction" class="form-control" />
                <span asp-validation-for="Name_attraction" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Category" class="control-label fw-bold"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="CityId" class="control-label fw-bold">Nazwa miasta</label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Wróć do strony głównej</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
